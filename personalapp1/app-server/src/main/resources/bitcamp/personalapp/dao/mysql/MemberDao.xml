<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.personalapp.dao.MemberDao">

<resultMap type="member" id="memberMap">
  <id column="mno" property="no"/>
  <result column="name" property="name"/>
  <result column="w_date"   property="w_date"/>
</resultMap>

  <insert id="insert" parameterType="member">
    insert into dia_member(name,email,pw,tel) values(#{name},#{email},sha1(#{pw}),#{tel})
  </insert>
  
  <select id="findAll" resultMap="memberMap">
   select 
   	mno, 
   	name, 
   	w_date
	 from dia_member 
	 order by 
	   mno
  </select>
  
  <select id="findByIdAndPassword" parameterType="member" resultMap="memberMap">
    select 
      email,
      pw 
    from 
      dia_member 
    where 
      email=#{email}
      and pw=sha1(#{pw})
  </select>
  
  <delete id="delete" parameterType="int">
  delete from dia_member 
  where 
    mno=#{no}
  </delete>

  <select id="findBy" parameterType="int" resultMap="memberMap">
  select 
    mno, 
    name, 
    email,
    w_date
  from 
    dia_member
  where 
    mno=#{no}
  </select>
  
</mapper>